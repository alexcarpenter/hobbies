---
title: Kit
description: All the tools and gear I use to produce content for this site and YouTube channel.
permalink: /kit/
---
{% extends 'layouts/default.njk' %}
{% import "components.njk" as components %}

{% block main %}
  <header>
    <h1 class="text-green-700 text-5xl font-bold">{{ title }}</h1>
    {% if description %}
      <div class="prose">
        <p class="text-xl text-gray-700">{{ description | markdownify_inline | safe }}</p>
      </div>
    {% endif %}
  </header>
  {% for category, items in products | groupby("category") %}
    <section class="{% if loop.index > 1%}mt-16{% else %}mt-8{% endif %}">
      <h2 class="text-3xl font-bold text-green-700 leading-tight pb-4 border-b border-gray-200">{{ category }}</h2>
      <div class="mt-8 grid sm:grid-cols-2 md:grid-cols-3 gap-8">
        {% for item in items %}
          {{ components.card({
            lazy: loop.index > 3,
            heading: item.heading,
            description: "Habitasse consectetur dolor senectus nisl quisque ornare metus accumsan potenti diam sociosqu pharetra tortor ad enim penatibus phasellus fames aenean"
          })}}
        {% endfor %}
      </div>
    </section>
  {% endfor %}
{% endblock %}